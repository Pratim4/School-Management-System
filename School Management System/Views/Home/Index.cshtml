<script>
    $(document).ready(function () {
        var itemsPerPage = 6;
        var currentPage = 1;
        var itemsArray = $('.notice-item').get().reverse();
        var items = $(itemsArray);

        console.log("Reversed Items: ", itemsArray);

        $('#noticeContainer').empty();
        $.each(itemsArray, function (index, item) {
            $('#noticeContainer').append(item);
            console.log("Appending item: ", item);
        });

        var totalItems = items.length;
        var totalPages = Math.ceil(totalItems / itemsPerPage);

        function showPage(page) {
            console.log("Showing page: ", page);
            $('.notice-item').hide().css('opacity', 0);
            var start = (page - 1) * itemsPerPage;
            var end = start + itemsPerPage;
            var itemsToShow = items.slice(start, end);

            $(itemsToShow).show().animate({ opacity: 1 }, 500);

            $('#page-info').text('Page ' + page + ' of ' + totalPages);

            if (page === 1) {
                $('#prev').attr('disabled', true);
            } else {
                $('#prev').attr('disabled', false);
            }

            if (page === totalPages) {
                $('#next').attr('disabled', true);
            } else {
                $('#next').attr('disabled', false);
            }
        }

        $('#prev').click(function () {
            if (currentPage > 1) {
                currentPage--;
                showPage(currentPage);
            }
        });

        $('#next').click(function () {
            if (currentPage < totalPages) {
                currentPage++;
                showPage(currentPage);
            }
        });

        showPage(currentPage);
    });
</script>


